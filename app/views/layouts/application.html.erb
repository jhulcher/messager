    <link href='https://fonts.googleapis.com/css?family=Montserrat'
          rel='stylesheet'
          type='text/css'>

    <%= stylesheet_link_tag 'application', media: 'all' %>

    <%= csrf_meta_tags %>
  </head>

  <body>

    <% if signed_in? %>
